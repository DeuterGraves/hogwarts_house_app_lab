<p>Edit <%= @student.f_name %>'s Record</p>
<hr>

<form class="" action="/students/<%= @student.id %>" method="post">
  <label for="f-name-field">First Name:</label>
  <input type="text" name="f_name" id="f-name-field" value="<%= @student.f_name %>"/>
  <label for="l-name-field">Last Name:</label>
  <input type="text" name="l_name" id="l-name-field" value="<%= @student.l_name %>" />
  <label for="age-field">Quantity:</label>
  <input
  type="number"
  name="age" value= "<%= @student.age %>" min= 1 id="age-field">
  <label for="house-select">House:</label>
  <select class="" name="house" id="house-select">
    <option value="Gryffindor">Gryffindor</option>
    <option value="Hufflepuff">Hufflepuff</option>
    <option value="Ravenclaw">Ravenclaw</option>
    <option value="Slytherin">Slytherin</option>
  </select>
  <input type="submit" name="" value="Update File">
</form>
